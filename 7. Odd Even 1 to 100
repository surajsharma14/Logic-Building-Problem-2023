#include<iostream>
using namespace std;
int main()
{
    int i;
    for(i=1;i<=100;i++){
    if(i%2==0)
    {
        cout<<i<<endl;
    }
  }
}





  <  other Approach   >
  
  
  #include<iostream>
  using namespace std;
  int main()
  {
      int i;
      for(i=2;i<=100;i+=2)
      {
         cout<<i<endl;
      }
  }
